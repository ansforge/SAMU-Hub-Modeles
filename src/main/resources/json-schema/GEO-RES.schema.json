{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "classpath:/json-schema/schema#",
    "x-id": "GEO-RES.schema.json#",
    "version": "24.02.29",
    "example": "example.json#",
    "type": "object",
    "title": "geolocalisation",
    "required": [],
    "properties": {
        "resourceDetails": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/resource"
            }
        }
    },
    "definitions": {
        "resource": {
            "type": "object",
            "title": "Ressource",
            "x-display": "expansion-panels",
            "x-health-only": false,
            "required": [
                "id",
                "orgId",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "title": "Identifiant de la ressource",
                    "x-health-only": false,
                    "x-cols": 6,
                    "example": "example.json#/resourceDetails/0/id",
                    "description": "Identifiant unique de la ressource  dans le syst\u00e8me du partenaire propri\u00e9taire"
                },
                "orgId": {
                    "type": "string",
                    "title": "Identifiant de l'organisation propri\u00e9taire",
                    "x-health-only": false,
                    "x-cols": 6,
                    "example": "example.json#/resourceDetails/0/orgId",
                    "description": "Identifiant unique de l'organisme :  {pays}.{domaine}.{code d\u00e9partement}.{organisation}.{structure interne}*.{unit\u00e9 fonctionnelle}*"
                },
                "name": {
                    "type": "string",
                    "title": "Nom de la ressource",
                    "x-health-only": false,
                    "x-cols": 6,
                    "example": "example.json#/resourceDetails/0/name",
                    "description": "Nom de la ressource"
                },
                "type": {
                    "type": "string",
                    "title": "Type de ressource",
                    "x-health-only": false,
                    "x-cols": 6,
                    "example": "example.json#/resourceDetails/0/type",
                    "description": "Cat\u00e9gorie de la ressource (SMUR, SDIS, TSU, SNP, MSPE, navire)"
                },
                "nature": {
                    "type": "string",
                    "title": "Nature de la ressource",
                    "x-health-only": false,
                    "x-cols": 6,
                    "example": "example.json#/resourceDetails/0/nature",
                    "description": "Nature de la ressource (effector, base)"
                },
                "mobility": {
                    "type": "string",
                    "title": "Mobilit\u00e9 de la ressource",
                    "x-health-only": false,
                    "x-cols": 6,
                    "example": "example.json#/resourceDetails/0/mobility",
                    "description": "Mobilit\u00e9 de la ressource (fix, vehicle, helicopter, ship)"
                },
                "capacity": {
                    "type": "string",
                    "title": "Capacit\u00e9s de la ressource",
                    "x-health-only": false,
                    "x-cols": 6,
                    "example": "example.json#/resourceDetails/0/capacity",
                    "description": "Capacit\u00e9 de transport d'un patient"
                },
                "contacts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/contact"
                    }
                }
            },
            "additionalProperties": false,
            "example": "example.json#/resourceDetails/0"
        },
        "contact": {
            "type": "object",
            "title": "Contacts",
            "x-display": "expansion-panels",
            "x-health-only": false,
            "required": [],
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Type de contact",
                    "x-health-only": false,
                    "x-cols": 6,
                    "example": "example.json#/resourceDetails/0/contacts/0/type",
                    "description": "Type de contact, voir \u00e9num\u00e9ration associ\u00e9e\n1. PMRADD (si RFGI disponible)\n2. PHNADD pour t\u00e9l\u00e9phonie"
                },
                "details": {
                    "type": "string",
                    "title": "D\u00e9tails de contact",
                    "x-health-only": false,
                    "x-cols": 6,
                    "example": "example.json#/resourceDetails/0/contacts/0/details",
                    "description": "1. RFGI (si RFGI disponible)\n2. Num\u00e9ro de t\u00e9l\u00e9phone"
                }
            },
            "additionalProperties": false,
            "example": "example.json#/resourceDetails/0/contacts/0"
        }
    },
    "additionalProperties": false
}